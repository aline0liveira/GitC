<Window x:Class="CalculadoraWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculadoraWPF"
         xmlns:y="clr-namespace:CalculadoraWPF.Views"
        mc:Ignorable="d"
        Title="Calculadora" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <y:ucLogin x:Name="ucLoginForm" loginCorrect="UcLoginForm_loginCorrect" Margin="-25,-31,-0.4,0" Foreground="#FFC35E5E" BorderBrush="Black" OpacityMask="#FFC22121" Background="#41A151B3"/>
        <y:ucCalculator x:Name="ucCalculator" Visibility="Hidden" Margin="104,0,103.6,-209"/>



    </Grid>
</Window>
